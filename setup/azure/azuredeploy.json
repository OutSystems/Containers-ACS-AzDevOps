{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualNetworkName": {
            "type": "string",
            "metadata": {
                "description": "The name of the existing virtual network (VNET)."
            }
        },
        "virtualNetworkResourceGroup": {
            "type": "string",
            "metadata": {
                "description": "The Resource Group where the existing virtual network (VNET) is located."
            }
        },
        "virtualMachineName": {
            "type": "string",
            "metadata": {
                "description": "Name of the deployment controller virtual machine."
            }
        },
        "virtualMachineSize": {
            "type": "string",
            "metadata": {
                "description": "Size of the deployment controller virtual machine."
            },
            "defaultValue": "Standard_D2s_v3"
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Admin username of all Windows VMs."
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Admin password of all Windows VMs."
            }
        },
        "virtualNetworkSubnetName": {
            "type": "string",
            "metadata": {
                "description": "The subnet where you want to deploy the deployment controller virtual machine."
            }
        },
        "applicationGatewayName": {
            "type": "string",
            "metadata": {
                "description": "The subnet for the Application Gateway. This subnet must be dedicated to Application Gateways and cannot contain any other resources."
            }
        },
        "applicationGatewayVirtualNetworkSubnetName": {
            "type": "string",
            "metadata": {
                "description": "The subnet for the Application Gateway. This subnet must be dedicated to Application Gateways and cannot contain any other resources."
            }
        },
        "applicationGatewayRuleName": {
            "type": "string",
            "defaultValue": "mainRule",
            "metadata": {
                "description": "The of the Application Gateway main rule that will be responsible to route the requests."
            }
        },
        "applicationGatewayPathMapName": {
            "type": "string",
            "defaultValue": "mainPathMap",
            "metadata": {
                "description": "The name of the pathMap object that contains the URLs of the main rule."
            }
        },
        "sqlServerName": {
            "type": "string",
            "metadata": {
                "description": "The Azure SQL Server name. CAUTION: This name must be unique within the Azure region. The deployment will fail if the name already exists."
            }
        },
        "databaseSKU": {
            "type": "string",
            "defaultValue": "S3",
            "metadata": {
                "description": "The size of the Azure SQL databases."
            }
        },
        "databaseAdministratorLogin": {
            "type": "string",
            "metadata": {
                "description": "The Azure SQL administrator login. CAUTION: This login cannot be identical to the login of the deployment controller virtual machine."
            }
        },
        "databaseAdministratorPass": {
            "type": "securestring",
            "metadata": {
                "description": "The Azure SQL administrator login password."
            }
        },
        "containerRegistryName": {
            "type": "string",
            "metadata": {
                "description": "The name of the container registry. CAUTION: This name must be unique within the Azure region."
            }
        },
        "logicAppName": {
            "type": "string",
            "metadata": {
                "description": "The name of the logic app that will be created for OutSystems triggers."
            }
        },
        "azureDevopsOrganization": {
            "type": "string",
            "metadata": {
                "description": "Your Azure Devops organization name."
            }
        },
        "azureDevopsProject": {
            "type": "string",
            "metadata": {
                "description": "The Azure Devops project where the pipelines are located."
            }
        },
        "azureDevopsPAT": {
            "type": "string",
            "metadata": {
                "description": "The Personal Authentication Token to access the Azure Devops REST API."
            }
        }
    },
    "variables": {
        "os11TemplateURI": "https://raw.githubusercontent.com/OutSystems/AzureARMTemplates/master/AzSQLController.json",
        "databasePlatform": "outsystems",
        "databaseSession": "osSession",
        "databaseLog": "osLog",
        "outsystemsServerVersion": "11.0.108.0",
        "outsystemsServiceStudioVersion": "11.0.109.0"
    },
    "resources": [
        {
            "name": "[concat('OutSystems.DC.', parameters('virtualMachineName'))]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('os11TemplateURI')]"
                },
                "parameters": {
                    "virtualMachineName": {
                        "value": "[parameters('virtualMachineName')]"
                    },
                    "virtualMachineSize": {
                        "value": "[parameters('virtualMachineSize')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "virtualNetworkResourceGroup": {
                        "value": "[parameters('virtualNetworkResourceGroup')]"
                    },
                    "virtualNetworkName": {
                        "value": "[parameters('virtualNetworkName')]"
                    },
                    "virtualNetworkSubnetName": {
                        "value": "[parameters('virtualNetworkSubnetName')]"
                    },
                    "sqlServerName": {
                        "value": "[parameters('sqlServerName')]"
                    },
                    "databaseSKU": {
                        "value": "[parameters('databaseSKU')]"
                    },
                    "databaseAdministratorLogin": {
                        "value": "[parameters('databaseAdministratorLogin')]"
                    },
                    "databaseAdministratorPass": {
                        "value": "[parameters('databaseAdministratorPass')]"
                    },
                    "databasePlatform": {
                        "value": "[variables('databasePlatform')]"
                    },
                    "databaseSession": {
                        "value": "[variables('databaseSession')]"
                    },
                    "databaseLog": {
                        "value": "[variables('databaseLog')]"
                    },
                    "outsystemsServerVersion": {
                        "value": "[variables('outsystemsServerVersion')]"
                    },
                    "outsystemsServiceStudioVersion": {
                        "value": "[variables('outsystemsServiceStudioVersion')]"
                    }
                }
            }
        },
        {
            "name": "[concat('OutSystems.APPGW.', parameters('applicationGatewayName'))]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'resources/applicationGateway.json')]"
                },
                "parameters": {
                    "applicationGatewayName": {
                        "value": "[parameters('applicationGatewayName')]"
                    },
                    "virtualNetworkResourceGroup": {
                        "value": "[parameters('virtualNetworkResourceGroup')]"
                    },
                    "virtualNetworkName": {
                        "value": "[parameters('virtualNetworkName')]"
                    },
                    "virtualNetworkSubnetName": {
                        "value": "[parameters('applicationGatewayVirtualNetworkSubnetName')]"
                    },
                    "virtualMachineIp": {
                        "value": "[reference(concat('Microsoft.Resources/deployments/OutSystems.DC.', parameters('virtualMachineName'))).outputs.virtualMachineIP.value]"
                    },
                    "mainRuleName": {
                        "value": "[parameters('applicationGatewayRuleName')]"
                    },
                    "urlPathMapsName": {
                        "value": "[parameters('applicationGatewayPathMapName')]"
                    }
                }
            }
        },
        {
            "name": "[concat('OutSystems.ACR.', parameters('containerRegistryName'))]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'resources/containerRegistry.json')]"
                },
                "parameters": {
                    "containerRegistryName": {
                        "value": "[parameters('containerRegistryName')]"
                    }
                }
            }
        },
        {
            "name": "[concat('OutSystems.LA.', parameters('logicAppName'))]",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'resources/logic.json')]"
                },
                "parameters": {
                    "logicAppName": {
                        "value": "[parameters('logicAppName')]"
                    },
                    "azureDevopsOrganization": {
                        "value": "[parameters('azureDevopsOrganization')]"
                    },
                    "azureDevopsProject": {
                        "value": "[parameters('azureDevopsProject')]"
                    },
                    "azureDevopsPAT": {
                        "value": "[parameters('azureDevopsPAT')]"
                    }
                }
            }
        }
    ]
}