{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "applicationGatewayName": {
            "type": "string"
        },
        "virtualNetworkResourceGroup": {
            "type": "string"
        },
        "virtualNetworkName": {
            "type": "string"
        },
        "virtualNetworkSubnetName": {
            "type": "string"
        },
        "virtualMachineIp": {
            "type": "string"
        },
        "mainRuleName": {
            "type": "string"
        },
        "urlPathMapsName": {
            "type": "string"
        }
    },
    "variables": {
        "vnetId": "[resourceId(parameters('virtualNetworkResourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
        "subnetid": "[concat(variables('vnetId'), '/subnets/', parameters('virtualNetworkSubnetName'))]",
        "pipName": "[concat(parameters('applicationGatewayName'), '-pip')]",
        "pipId": "[resourceId('Microsoft.Network/publicIPAddresses',variables('pipName'))]",
        "appgwName": "[parameters('applicationGatewayName')]",
        "appgwId": "[resourceId('Microsoft.Network/applicationGateways',variables('appgwName'))]",
        "appgwClassicNamePrefix": "classicZone",
        "appgwContainersNamePrefix": "containersZone"
    },
    "resources": [
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('pipName')]",
            "location": "[resourceGroup().location]",
            "apiVersion": "2016-03-30",
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "sku": {
                    "name": "Basic"
                }
            }
        },
        {
            "type": "Microsoft.Network/applicationGateways",
            "name": "[variables('appgwName')]",
            "location": "[resourceGroup().location]",
            "apiVersion": "2017-06-01",
            "dependsOn": [
                "[concat('Microsoft.Network/publicIPAddresses/', variables('pipName'))]"
            ],
            "properties": {
                "sku": {
                    "name": "Standard_Medium",
                    "tier": "Standard",
                    "capacity": 2
                },
                "gatewayIPConfigurations": [
                    {
                        "name": "appGatewayIpConfig",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetid')]"
                            }
                        }
                    }
                ],
                "frontendIPConfigurations": [
                    {
                        "name": "appGatewayFrontendIP",
                        "properties": {
                            "PublicIPAddress": {
                                "id": "[variables('pipId')]"
                            }
                        }
                    }
                ],
                "frontendPorts": [
                    {
                        "name": "appGatewayFrontendPort",
                        "properties": {
                            "Port": 80
                        }
                    }
                ],
                "backendAddressPools": [
                    {
                        "name": "[concat(variables('appgwClassicNamePrefix'),'Frontends')]",
                        "properties": {
                            "backendAddresses": [
                                {
                                    "ipAddress": "[parameters('virtualMachineIp')]"
                                }
                            ]
                        }
                    },
                    {
                        "name": "[concat(variables('appgwContainersNamePrefix'),'Frontends')]",
                        "properties": {
                            "backendAddresses": []
                        }
                    }
                ],
                "backendHttpSettingsCollection": [
                    {
                        "name": "[concat(variables('appgwClassicNamePrefix'),'FrontendsHttpSettings')]",
                        "properties": {
                            "Port": 80,
                            "Protocol": "Http",
                            "CookieBasedAffinity": "Disabled",
                            "probe": {
                                "id": "[concat(resourceId('Microsoft.Network/applicationGateways', variables('appgwName')), '/probes/', variables('appgwClassicNamePrefix'), 'probe')]"
                            }
                        }
                    },
                    {
                        "name": "[concat(variables('appgwContainersNamePrefix'),'FrontendsHttpSettings')]",
                        "properties": {
                            "Port": 80,
                            "Protocol": "Http",
                            "CookieBasedAffinity": "Disabled",
                            "probe": {
                                "id": "[concat(resourceId('Microsoft.Network/applicationGateways', variables('appgwName')), '/probes/', variables('appgwContainersNamePrefix'), 'probe')]"
                            }
                        }
                    }
                ],
                "httpListeners": [
                    {
                        "name": "appGatewayHttpListener",
                        "properties": {
                            "FrontendIPConfiguration": {
                                "Id": "[concat(variables('appgwId'), '/frontendIPConfigurations/appGatewayFrontendIP')]"
                            },
                            "FrontendPort": {
                                "Id": "[concat(variables('appgwId'), '/frontendPorts/appGatewayFrontendPort')]"
                            },
                            "Protocol": "Http",
                            "SslCertificate": null
                        }
                    }
                ],
                "probes": [
                    {
                        "name": "[concat(variables('appgwClassicNamePrefix'), 'probe')]",
                        "properties": {
                            "protocol": "Http",
                            "host": "127.0.0.1",
                            "path": "/servicecenter/_ping.aspx",
                            "interval": 30,
                            "timeout": 30,
                            "unhealthyThreshold": 3,
                            "pickHostNameFromBackendHttpSettings": false
                        }
                    },
                    {
                        "name": "[concat(variables('appgwContainersNamePrefix'), 'probe')]",
                        "properties": {
                            "protocol": "Http",
                            "host": "127.0.0.1",
                            "path": "/",
                            "interval": 30,
                            "timeout": 30,
                            "unhealthyThreshold": 3,
                            "pickHostNameFromBackendHttpSettings": false,
                            "match": {
                                "body": "",
                                "statusCodes": [
                                    "200-499"
                                ]
                            }
                        }
                    }
                ],
                "requestRoutingRules": [
                    {
                        "Name": "[parameters('mainRuleName')]",
                        "properties": {
                            "RuleType": "PathBasedRouting",
                            "httpListener": {
                                "id": "[concat(variables('appgwId'), '/httpListeners/appGatewayHttpListener')]"
                            },
                            "urlPathMap": {
                                "id": "[concat(variables('appgwId'), '/urlPathMaps/',parameters('urlPathMapsName'))]"
                            }
                        }
                    }
                ],
                "urlPathMaps": [
                    {
                        "name": "[parameters('urlPathMapsName')]",
                        "properties": {
                            "defaultBackendAddressPool": {
                                "id": "[concat(variables('appgwId'), '/backendAddressPools/', variables('appgwClassicNamePrefix'),'Frontends')]"
                            },
                            "defaultBackendHttpSettings": {
                                "id": "[concat(variables('appgwId'), '/backendHttpSettingsCollection/', variables('appgwClassicNamePrefix'),'FrontendsHttpSettings')]"
                            },
                            "pathRules": [
                                {
                                    "name": "dummy",
                                    "properties": {
                                        "paths": [
                                            "/_dummy"
                                        ],
                                        "backendAddressPool": {
                                            "id": "[concat(variables('appgwId'), '/backendAddressPools/', variables('appgwClassicNamePrefix'),'Frontends')]"
                                        },
                                        "backendHttpSettings": {
                                            "id": "[concat(variables('appgwId'), '/backendHttpSettingsCollection/', variables('appgwClassicNamePrefix'),'FrontendsHttpSettings')]"
                                        }
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
        "applicationGatewayName": {
            "type": "string",
            "value": "[parameters('applicationGatewayName')]"
        }
    }
}