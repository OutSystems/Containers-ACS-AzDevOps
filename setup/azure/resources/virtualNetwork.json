{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualNetworkName": {
            "type": "string"
        },
        "virtualNetworkAddressSpace": {
            "type": "string",
            "defaultValue": "10.0.0.0/16"
        },
        "subnetNameForVirtualMachines": {
            "type": "string",
            "defaultValue": "outsystems-subnet"
        },
        "subnetAddressSpaceForVirtualMachines": {
            "type": "string",
            "defaultValue": "10.0.0.0/24"
        },
        "subnetNameForApplicationGateway": {
            "type": "string",
            "defaultValue": "appgw-subnet"
        },
        "subnetAddressSpaceForApplicationGateway": {
            "type": "string",
            "defaultValue": "10.0.1.0/24"
        },
        "subnetNameForContainers": {
            "type": "string",
            "defaultValue": "containers-subnet"
        },
        "subnetAddressSpaceForContainers": {
            "type": "string",
            "defaultValue": "10.0.2.0/24"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[parameters('virtualNetworkName')]",
            "location": "[resourceGroup().location]",
            "apiVersion": "2017-10-01",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('virtualNetworkAddressSpace')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('subnetNameForVirtualMachines')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetAddressSpaceForVirtualMachines')]"
                        }
                    },
                    {
                        "name": "[parameters('subnetNameForApplicationGateway')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetAddressSpaceForApplicationGateway')]"
                        }
                    },
                    {
                        "name": "[parameters('subnetNameForContainers')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetAddressSpaceForContainers')]"
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
        "virtualNetworkName": {
            "type": "string",
            "value": "[parameters('virtualNetworkName')]"
        }
    }
}